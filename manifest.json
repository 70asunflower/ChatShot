{
  "manifest_version": 3,
  "name": "ChatShot",
  "version": "1.0.0",
  "description": "Capture AI chat responses as screenshots and stitch them for easy sharing",
  "permissions": ["activeTab"],
  "icons": {
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.deepseek.com/*", "https://notebooklm.google.com/*", "https://chatgpt.com/*", "https://gemini.google.com/*", "https://www.doubao.com/*", "https://www.kimi.com/*", "https://www.qianwen.com/*", "https://chatglm.cn/*", "https://copilot.microsoft.com/*"],
      "js": ["lib/html2canvas.min.js", "content.js"],
      "css": ["content.css"]
    }
  ]
}
